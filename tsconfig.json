{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true, // avoids surprises with `cubing/twisty`
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/lib",
    "resolveJsonModule": true,
    "skipLibCheck": true // grrrrrrr https://github.com/oven-sh/bun/issues/8761
  },
  "include": ["src"]
}
