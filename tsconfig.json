{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true, // avoids surprises with `cubing/twisty`
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/lib",
    "resolveJsonModule": true
  },
  "include": [
    "./src/lib/index.ts"
  ]
}
